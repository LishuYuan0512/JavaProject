    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup.jsp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>customer</servlet-name>
        <jsp-file>/customer.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>customer</servlet-name>
        <url-pattern>/customer.jsp</url-pattern>
    </servlet-mapping>
    
    
